{
    "manifest_version": 2,
    "name": "YAST",
    "version": "1.0",
    "description": "Yet Another Selection Tool for downloading content with an easy selection mode",
    "background": {
        "scripts": ["src/popup.js"]
    },
    "content_scripts": [
        {
          "matches": ["*://*.google.com/*"],
          "js": ["./src/content.js"],
          "run_at": "document_end"
        }
      ],
      "browser_action" : {
            "default_popup": "index.html",
            "default_icon": {
                "16": "src/assets/Cute-Dog-icon.png",
                "48": "src/assets/Cute-Dog-icon.png",
                "128": "src/assets/Cute-Dog-icon.png"
              }
      }
  }
